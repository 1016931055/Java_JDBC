<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <!--配置数据库连接的四大参数-->
    <dataSource>
        <!--驱动-->
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <!--地址-->
        <property name="url" value="jdbc:mysql://127.0.01:3306/db3"/>
        <!--用户名-->
        <property name="username" value="root"/>
        <!--密码-->
        <property name="password" value="itheima"/>
    </dataSource>

    <!-- 关联Mapper接口 -->
    <mappers>
        <package name="com.itheima.UserMaper"></package>
    </mappers>

</configuration>